{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "airbnb-base",
        "plugin:prettier/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "plugins": [
        "@typescript-eslint","prettier","react"
    ],
    "rules": {
        "prettier/prettier": ["error", {"bracketSpacing": true, "jsxBracketSameLine": true,"trailingComma": "none","singleQuote": true,"end-of-line": "lf"}]
    }
}